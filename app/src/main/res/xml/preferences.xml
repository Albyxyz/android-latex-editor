<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="editor_category"
        android:title="Editor">
        <ListPreference
            android:key="font_size"
            android:title="Font Size"
            android:dialogTitle="@string/font_size"
            android:entries="@array/available_font_sizes"
            android:entryValues="@array/available_font_sizes"
            android:defaultValue="@string/default_font_size">
        </ListPreference>
    </PreferenceCategory>
    <PreferenceCategory
        android:key="image_category"
        android:title="Directories">
        <EditTextPreference
            android:key="images_folder"
            android:title="Images Folder"
            android:summary="">
        </EditTextPreference>
        <EditTextPreference
            android:key="output_folder"
            android:title="Output PDF Folder"
            android:summary="">
        </EditTextPreference>
    </PreferenceCategory>
</PreferenceScreen>